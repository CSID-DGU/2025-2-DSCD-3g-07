# PaceTry Backend Environment Variables

# TMAP API 설정
TMAP_APPKEY=your_tmap_api_key_here
TMAP_API_URL=https://apis.openapi.sk.com/transit/routes

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,exp://

# 데이터베이스
DATABASE_URL=sqlite:///./app.db

# Logging
LOG_LEVEL=INFO

# Health Connect 설정
HEALTH_DATA_ENCRYPTION_KEY=your-encryption-key-for-health-data

# 보안 설정
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (향후 추가 시)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# OPENWEATHER_API_KEY=your-openweather-api-key

# 캐시 설정 (향후 Redis 추가 시)
# REDIS_URL=redis://localhost:6379
