# PaceTry Backend Environment Variables

PYTHON_VERSION: '3.13.5'

# TMAP API 설정
TMAP_APPKEY=your_tmap_api_key_here
TMAP_API_URL=https://apis.openapi.sk.com/transit/routes

# KMA 기상청 API 설정
# 인코딩/디코딩이 완료된 인증키를 입력하세요.
KMA_SERVICE_KEY=your_kma_service_key

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,exp://

# 데이터베이스
DATABASE_URL=postgresql://postgres:비밀번호자리@localhost:5432/PaceTry_app_db

# Logging
LOG_LEVEL=INFO

# Health Connect 설정
HEALTH_DATA_ENCRYPTION_KEY=your-encryption-key-for-health-data

# 보안 설정
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (향후 추가 시)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# OPENWEATHER_API_KEY=your-openweather-api-key


# Database (미래 확장용)
DATABASE_URL=postgresql://postgres:실제RDS비밀번호@실제RDS엔드포인트:5432/postgres

# 캐시 설정 (향후 Redis 추가 시)
# REDIS_URL=redis://localhost:6379

